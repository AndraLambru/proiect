<div class="col-lg-6" infoprod="@Model.id">
   

    <div class="col-lg-12 styleImages" style="background-color: white">
        
        @if (Model.pictures != null && Model.pictures.Count > 0)
        {
            foreach (BEntities.Pic p in Model.pictures)
            {
                if(p.rank!=0)
                { 
                    <input type="hidden" class="@("image"+p.rank)" value="@p.url">
                }
            }
        }

        <img src="@Model.BigPic.url" alt="" class="img-responsive" />
